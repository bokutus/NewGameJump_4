<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JankenScreen">

    <ImageView
            android:layout_width="422dp"
            android:layout_height="246dp" app:srcCompat="@drawable/newgame_nene"
            android:id="@+id/imageView9" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.545"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/gu"
            android:id="@+id/gu" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.525" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.049"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/choki"
            android:id="@+id/choki" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gu" app:layout_constraintEnd_toStartOf="@+id/gu"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.264"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/pa"
            android:id="@+id/pa" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gu"
            app:layout_constraintStart_toEndOf="@+id/gu" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.259"/>
    <TextView
            android:text="どの手で勝負する？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/background_dark" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.497"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
</androidx.constraintlayout.widget.ConstraintLayout>