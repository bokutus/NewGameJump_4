<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".JankenResult">

    <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp" app:srcCompat="@drawable/gu"
            android:id="@+id/myHandImage" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.962"
    />
    <ImageView
            android:layout_width="235dp"
            android:layout_height="209dp" app:srcCompat="@drawable/aiko"
            android:id="@+id/cpuFaceImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp" app:srcCompat="@drawable/gu"
            android:id="@+id/cpuHandImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="@+id/cpuFaceImage"/>
    <TextView
            android:text="YOU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            android:textSize="30sp"
            android:textColor="@android:color/background_dark" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/myHandImage"/>
    <TextView
            android:text="CPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" android:textSize="30sp"
            android:textColor="@android:color/background_dark"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/cpuHandImage"
            android:layout_marginEnd="52dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="TOP画面へ"
            android:layout_width="115dp"
            android:layout_height="47dp"
            android:id="@+id/backButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/coinButton"/>
    <Button
            android:text="Coinをもらう"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coinButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cpuFaceImage" app:layout_constraintHorizontal_bias="0.496"/>
    <ImageView
            android:layout_width="235dp"
            android:layout_height="209dp" app:srcCompat="@drawable/aiko"
            android:id="@+id/myFaceImage" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>